{
  "extends": ["tslint:recommended", "tslint-clean-code"],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "class-method-newlines": true,
    "curly": [true, "ignore-same-line"],
    "forin": false,
    "interface-name": false,
    "interface-over-type-literal": false,
    "member-access": [true, "no-public"],
    "no-commented-out-code": true,
    "no-conditional-assignment": false,
    "no-default-export": false,
    "no-empty": [true, "allow-empty-functions"],
    "no-namespace": false,
    "no-shadowed-variable": false,
    "object-literal-sort-keys": [true, "match-declaration-order"],
    "one-line": [true, "check-open-brace"],
    "prefer-conditional-expression": true,
    "prefer-method-signature": false,
    "prefer-const": false,
    "quotemark": [true, "single", "avoid-template", "avoid-escape"],
    "react-lifecycle-order": true,
    "semicolon": [true, "never"],
    "trailing-comma": {
      "options": {
        "singleline": "never",
        "multiline": {
          "arrays": "always",
          "exports": "always",
          "functions": "never",
          "imports": "always",
          "objects": "always",
          "typeLiterals": "never"
        }
      }
    },
    "triple-equals": false,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "linterOptions": {
    "exclude": ["node_modules/**/*"]
  }
}
